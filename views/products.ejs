<%- include('partials/header') %>

<!-- Modern Medical Equipment Hero -->
<section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-cyan-600 text-white py-20 overflow-hidden">
    <!-- Animated Medical Background -->
    <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-64 h-64 bg-white/5 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-10 w-80 h-80 bg-cyan-400/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/3 w-72 h-72 bg-blue-400/10 rounded-full blur-3xl animate-pulse delay-2000"></div>
    </div>
    
    <!-- Medical Icons -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 right-20 opacity-10 animate-float">
            <i class="fas fa-heartbeat text-6xl"></i>
        </div>
        <div class="absolute top-1/3 left-16 opacity-10 animate-float-delayed">
            <i class="fas fa-stethoscope text-5xl"></i>
        </div>
        <div class="absolute bottom-32 right-1/4 opacity-10 animate-float-slow">
            <i class="fas fa-user-md text-6xl"></i>
        </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-8 md:py-12">
        <div class="inline-flex items-center px-4 md:px-6 py-2 md:py-3 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-4 md:mb-6">
            <i class="fas fa-medical-kit mr-2 md:mr-3 text-cyan-400"></i>
            <span class="font-semibold text-sm md:text-base">Premium Medical Equipment</span>
        </div>
        
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-black leading-tight mb-4 md:mb-6">
            <span class="block">Advanced</span>
            <span class="block bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">
                Healthcare Solutions
            </span>
        </h1>
        
        <p class="text-lg md:text-xl lg:text-2xl text-blue-100 leading-relaxed max-w-3xl mx-auto mb-6 md:mb-8 px-4">
            Discover our comprehensive range of ISO-certified medical equipment designed for 
            healthcare excellence and patient care.
        </p>
        
        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-4 md:gap-6 lg:gap-8 mb-6 md:mb-8">
            <div class="text-center">
                <div class="text-3xl font-bold text-cyan-400"><%= products.length %>+</div>
                <div class="text-sm text-blue-200">Products Available</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-cyan-400">ISO</div>
                <div class="text-sm text-blue-200">Certified Quality</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-cyan-400">24/7</div>
                <div class="text-sm text-blue-200">Support</div>
            </div>
        </div>
    </div>
</section>

<!-- Advanced Search & Filter Section -->
<section class="py-12 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Search Bar -->
        <div class="bg-white rounded-3xl shadow-2xl p-8 mb-8 border border-gray-100">
            <div class="flex flex-col lg:flex-row items-center gap-6">
                <div class="flex-1 relative">
                    <div class="absolute inset-y-0 left-0 pl-6 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400 text-xl"></i>
                    </div>
                    <input type="text" id="search-input" placeholder="Search medical equipment..." 
                           value="<%= currentSearch %>"
                           class="w-full pl-16 pr-6 py-4 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 text-lg bg-gradient-to-r from-gray-50 to-white">
                </div>
                
                <div class="flex items-center gap-4">
                    <select id="category-filter" onchange="filterProducts()" 
                            class="px-6 py-4 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 bg-gradient-to-r from-gray-50 to-white">
                        <% categories.forEach(category => { %>
                            <option value="<%= category %>" <%= currentCategory === category ? 'selected' : '' %>>
                                <%= category %>
                            </option>
                        <% }) %>
                    </select>
                    
                    <select id="sort-filter" onchange="filterProducts()" 
                            class="px-6 py-4 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 bg-gradient-to-r from-gray-50 to-white">
                        <option value="">Sort by</option>
                        <option value="name" <%= currentSort === 'name' ? 'selected' : '' %>>Name A-Z</option>
                        <option value="price-low" <%= currentSort === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="price-high" <%= currentSort === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
                    </select>
                    
                    <button onclick="searchProducts()" class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white px-8 py-4 rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                        <i class="fas fa-search mr-2"></i>Search
                    </button>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <% if (products.length > 0) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6 lg:gap-8">
                <% products.forEach((product, index) => { %>
                    <div class="group relative bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden" 
                         data-product-id="<%= product.id %>">
                        
                        <!-- Medical Badge -->
                        <div class="absolute top-4 left-4 z-10">
                            <div class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg">
                                <i class="fas fa-shield-alt mr-1"></i>ISO Certified
                            </div>
                        </div>
                        
                        <!-- Discount Badge -->
                        <% if (product.on_sale && product.originalPrice > product.price) { %>
                            <div class="absolute top-4 right-4 z-10">
                                <div class="bg-gradient-to-r from-red-500 to-pink-600 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg animate-pulse">
                                    <%= Math.round((1 - product.price / product.originalPrice) * 100) %>% OFF
                                </div>
                            </div>
                        <% } %>
                        
                        <!-- Product Image -->
                        <div class="relative overflow-hidden rounded-t-3xl bg-gradient-to-br from-blue-50 to-cyan-50">
                            <img src="<%= product.image %>" alt="<%= product.name %>" 
                                 class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
                                 onerror="this.src='/images/placeholder-medical.jpg'">
                            
                            <!-- Quick Actions -->
                            <div class="absolute top-4 right-4 flex flex-col space-y-2 opacity-0 group-hover:opacity-100 transition-all duration-300">
                                <button onclick="addToWishlist('<%= product.id %>')" 
                                        class="bg-white/90 backdrop-blur-sm text-gray-600 hover:text-red-500 p-3 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110">
                                    <i class="fas fa-heart"></i>
                                </button>
                                <a href="/product/<%= product.id %>" 
                                   class="bg-white/90 backdrop-blur-sm text-gray-600 hover:text-blue-600 p-3 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110 inline-block">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                            
                            <!-- Stock Status -->
                            <div class="absolute bottom-4 left-4">
                                <% if (product.inStock) { %>
                                    <div class="bg-green-500 text-white px-3 py-1 rounded-full text-xs font-semibold">
                                        <i class="fas fa-check mr-1"></i>In Stock
                                    </div>
                                <% } else { %>
                                    <div class="bg-red-500 text-white px-3 py-1 rounded-full text-xs font-semibold">
                                        <i class="fas fa-times mr-1"></i>Out of Stock
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Product Info -->
                        <div class="p-6">
                            <!-- Rating -->
                            <div class="flex items-center justify-between mb-3">
                                <div class="flex items-center space-x-1">
                                    <% for(let i = 0; i < 5; i++) { %>
                                        <i class="fas fa-star <%= i < Math.floor(product.rating) ? 'text-yellow-400' : 'text-gray-300' %> text-sm"></i>
                                    <% } %>
                                    <span class="text-sm text-gray-600 ml-2">(<%= product.reviews %>)</span>
                                </div>
                                <div class="text-xs font-semibold text-blue-600 bg-blue-50 px-2 py-1 rounded-full">
                                    <%= product.rating %> ★
                                </div>
                            </div>
                            
                            <!-- Product Name -->
                            <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight">
                                <a href="/product/<%= product.id %>"><%= product.name %></a>
                            </h3>
                            
                            <!-- Category -->
                            <div class="mb-4">
                                <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-blue-50 to-cyan-50 text-blue-700 text-sm font-medium rounded-full border border-blue-200">
                                    <i class="fas fa-tag mr-1 text-xs"></i>
                                    <%= product.category %>
                                </span>
                            </div>
                            
                            <!-- Price -->
                            <div class="flex items-center justify-between mb-6">
                                <div class="flex items-center space-x-3">
                                    <span class="text-3xl font-black text-blue-600">₹<%= product.price.toLocaleString() %></span>
                                    <% if (product.originalPrice > product.price) { %>
                                        <div class="flex flex-col">
                                            <span class="text-sm text-gray-500 line-through">₹<%= product.originalPrice.toLocaleString() %></span>
                                            <span class="text-xs text-green-600 font-semibold">Save ₹<%= (product.originalPrice - product.price).toLocaleString() %></span>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            
                            <!-- Features -->
                            <div class="mb-6">
                                <div class="flex flex-wrap gap-2">
                                    <% product.features.forEach(feature => { %>
                                        <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded-full">
                                            <i class="fas fa-check text-green-500 mr-1"></i><%= feature %>
                                        </span>
                                    <% }) %>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="flex space-x-3">
                                <% if (product.inStock) { %>
                                    <button onclick="addToCart('<%= product.id %>')" 
                                            class="flex-1 bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                        <i class="fas fa-cart-plus mr-2"></i>Add to Cart
                                    </button>
                                <% } else { %>
                                    <button disabled 
                                            class="flex-1 bg-gray-400 text-white font-semibold py-3 px-4 rounded-xl cursor-not-allowed">
                                        <i class="fas fa-times mr-2"></i>Out of Stock
                                    </button>
                                <% } %>
                                <a href="/product/<%= product.id %>" 
                                   class="bg-gradient-to-r from-gray-100 to-gray-200 hover:from-gray-200 hover:to-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                            
                            <!-- Medical Info -->
                            <div class="mt-4 pt-4 border-t border-gray-100">
                                <div class="flex items-center justify-between text-xs text-gray-500">
                                    <div class="flex items-center">
                                        <i class="fas fa-shipping-fast mr-1 text-green-500"></i>
                                        <span>Free Shipping</span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-shield-alt mr-1 text-blue-500"></i>
                                        <span>2 Year Warranty</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- Beautiful No Products State -->
            <div class="text-center py-20">
                <div class="max-w-lg mx-auto">
                    <div class="mb-8 relative">
                        <div class="w-40 h-40 bg-gradient-to-br from-blue-100 to-cyan-200 rounded-full flex items-center justify-center mx-auto mb-6 relative overflow-hidden">
                            <i class="fas fa-medical-kit text-6xl text-blue-600"></i>
                            <div class="absolute inset-0 bg-gradient-to-br from-blue-400/20 to-cyan-400/20 rounded-full animate-pulse"></div>
                        </div>
                        <div class="absolute -top-2 -right-8 w-20 h-20 bg-gradient-to-br from-cyan-100 to-blue-200 rounded-full flex items-center justify-center animate-bounce">
                            <i class="fas fa-plus text-cyan-600 text-2xl"></i>
                        </div>
                    </div>
                    
                    <h3 class="text-3xl font-bold text-gray-900 mb-6">Medical Equipment Coming Soon!</h3>
                    <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                        We're preparing our comprehensive catalog of premium medical equipment. 
                        Our ISO-certified products will be available shortly.
                    </p>
                    
                    <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl p-6 mb-8 border border-blue-200">
                        <h4 class="font-bold text-blue-900 mb-3">What to Expect:</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-blue-700">
                            <div class="flex items-center">
                                <i class="fas fa-check text-green-500 mr-2"></i>
                                Diagnostic Equipment
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check text-green-500 mr-2"></i>
                                Respiratory Devices
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check text-green-500 mr-2"></i>
                                Hospital Furniture
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check text-green-500 mr-2"></i>
                                Surgical Instruments
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="/contact" class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                            <i class="fas fa-phone mr-2"></i>
                            Contact for Inquiries
                        </a>
                        <a href="/about" class="bg-gradient-to-r from-gray-100 to-gray-200 hover:from-gray-200 hover:to-gray-300 text-gray-700 font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                            <i class="fas fa-info-circle mr-2"></i>
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</section>

<!-- Medical Equipment Categories -->
<% if (products.length > 0) { %>
<section class="py-16 bg-gradient-to-br from-blue-50 to-cyan-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">
                Browse by Category
            </h2>
            <p class="text-xl text-gray-600">
                Find the perfect medical equipment for your healthcare needs
            </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
            <% categories.slice(1).forEach(category => { %>
                <a href="/products?category=<%= encodeURIComponent(category) %>" class="group">
                    <div class="bg-white rounded-2xl p-6 text-center hover:bg-gradient-to-br hover:from-blue-50 hover:to-cyan-50 transition-all duration-300 transform hover:-translate-y-2 shadow-lg hover:shadow-xl border border-gray-100">
                        <div class="bg-gradient-to-br from-blue-100 to-cyan-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:from-blue-600 group-hover:to-cyan-600 transition-all duration-300">
                            <i class="fas fa-<%= category.toLowerCase().includes('diagnostic') ? 'stethoscope' : 
                                                category.toLowerCase().includes('respiratory') ? 'lungs' :
                                                category.toLowerCase().includes('mobility') ? 'wheelchair' :
                                                category.toLowerCase().includes('hospital') ? 'bed' :
                                                category.toLowerCase().includes('surgical') ? 'cut' :
                                                'microscope' %> text-2xl text-blue-600 group-hover:text-white transition-colors duration-300"></i>
                        </div>
                        <h3 class="font-semibold text-gray-800 group-hover:text-blue-600 transition-colors duration-300 text-sm">
                            <%= category.replace('Equipment', '').trim() %>
                        </h3>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
</section>
<% } %>

<script>
// Search and Filter Functions
function searchProducts() {
    const search = document.getElementById('search-input').value;
    const category = document.getElementById('category-filter').value;
    const sort = document.getElementById('sort-filter').value;
    
    const params = new URLSearchParams();
    if (search) params.append('search', search);
    if (category && category !== 'All Categories') params.append('category', category);
    if (sort) params.append('sort', sort);
    
    window.location.href = '/products?' + params.toString();
}

function filterProducts() {
    searchProducts();
}

// Add to Cart Function
function addToCart(productId) {
    fetch('/cart/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            productId: productId,
            quantity: 1
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success notification
            showNotification('Product added to cart!', 'success');
        } else {
            showNotification('Failed to add product to cart', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showNotification('Failed to add product to cart', 'error');
    });
}

// Add to Wishlist Function
function addToWishlist(productId) {
    showNotification('Added to wishlist!', 'success');
}

// Notification Function
function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 z-50 px-6 py-4 rounded-xl shadow-lg transition-all duration-300 ${
        type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
        <div class="flex items-center">
            <i class="fas fa-${type === 'success' ? 'check' : 'times'} mr-2"></i>
            ${message}
        </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.transform = 'translateX(100%)';
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 3000);
}

// Search on Enter key
document.getElementById('search-input').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        searchProducts();
    }
});
</script>

