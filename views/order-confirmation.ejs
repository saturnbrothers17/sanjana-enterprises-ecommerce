<%- include('partials/header') %>

<!-- Order Confirmation Page -->
<section class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Success Header -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-green-500 rounded-full mb-6 animate-bounce">
                <i class="fas fa-check text-white text-4xl"></i>
            </div>
            <h1 class="text-4xl md:text-5xl font-black text-gray-900 mb-4">Order Confirmed!</h1>
            <p class="text-xl text-gray-600 leading-relaxed">
                Thank you for your order. We'll process it shortly and keep you updated.
            </p>
        </div>

        <!-- Progress Indicator -->
        <div class="mb-12">
            <div class="flex items-center justify-center space-x-4 mb-8">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center font-bold">
                        <i class="fas fa-check"></i>
                    </div>
                    <span class="ml-3 text-green-600 font-semibold">Customer Info</span>
                </div>
                <div class="w-16 h-1 bg-green-500 rounded"></div>
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center font-bold">
                        <i class="fas fa-check"></i>
                    </div>
                    <span class="ml-3 text-green-600 font-semibold">Checkout</span>
                </div>
                <div class="w-16 h-1 bg-green-500 rounded"></div>
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center font-bold">
                        <i class="fas fa-check"></i>
                    </div>
                    <span class="ml-3 text-green-600 font-semibold">Confirmed</span>
                </div>
            </div>
        </div>

        <!-- Order Details -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-200 mb-8">
            
            <!-- Order Header -->
            <div class="bg-gradient-to-r from-green-600 to-emerald-600 text-white p-8">
                <div class="flex flex-col md:flex-row items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold mb-2">Order Details</h2>
                        <p class="text-green-100">Your medical equipment order has been confirmed</p>
                    </div>
                    <div class="mt-4 md:mt-0 text-center md:text-right">
                        <div class="text-sm text-green-100">Order ID</div>
                        <div id="orderIdDisplay" class="text-2xl font-bold">#ORD-LOADING</div>
                    </div>
                </div>
            </div>

            <div class="p-8 space-y-8">
                
                <!-- Order Summary -->
                <div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-shopping-cart text-green-600 mr-3"></i>
                        Order Summary
                    </h3>
                    
                    <div id="orderSummaryDisplay" class="space-y-4">
                        <!-- Order items will be populated by JavaScript -->
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-user text-green-600 mr-3"></i>
                            Customer Details
                        </h3>
                        <div id="customerDetailsDisplay" class="space-y-2 text-gray-700">
                            <!-- Customer details will be populated by JavaScript -->
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-map-marker-alt text-green-600 mr-3"></i>
                            Delivery Address
                        </h3>
                        <div id="deliveryAddressDisplay" class="space-y-2 text-gray-700">
                            <!-- Delivery address will be populated by JavaScript -->
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-credit-card text-green-600 mr-3"></i>
                        Payment Information
                    </h3>
                    
                    <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-200">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
                                <i class="fas fa-truck text-white text-xl"></i>
                            </div>
                            <div>
                                <h4 class="text-lg font-bold text-green-800">Cash on Delivery</h4>
                                <p class="text-green-600">Pay when your order is delivered</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Total -->
                <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl p-6 border border-blue-200">
                    <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-calculator text-blue-600 mr-3"></i>
                        Order Total
                    </h3>
                    
                    <div id="orderTotalDisplay" class="space-y-3">
                        <!-- Order total will be populated by JavaScript -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Next Steps -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 text-center">
                <div class="bg-gradient-to-br from-blue-100 to-cyan-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-envelope text-2xl text-blue-600"></i>
                </div>
                <h4 class="font-bold text-gray-900 mb-2">Order Confirmation</h4>
                <p class="text-sm text-gray-600">You'll receive an email confirmation shortly</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 text-center">
                <div class="bg-gradient-to-br from-yellow-100 to-orange-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-cogs text-2xl text-yellow-600"></i>
                </div>
                <h4 class="font-bold text-gray-900 mb-2">Processing</h4>
                <p class="text-sm text-gray-600">We'll prepare your order for shipment</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 text-center">
                <div class="bg-gradient-to-br from-green-100 to-emerald-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-truck text-2xl text-green-600"></i>
                </div>
                <h4 class="font-bold text-gray-900 mb-2">Delivery</h4>
                <p class="text-sm text-gray-600">3-5 business days with free installation</p>
            </div>
        </div>

        <!-- Medical Equipment Information -->
        <div class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white rounded-3xl p-8 mb-8">
            <h3 class="text-2xl font-bold mb-6 flex items-center">
                <i class="fas fa-medical-kit mr-3"></i>
                Medical Equipment Delivery Information
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <h4 class="font-semibold mb-3">What to Expect</h4>
                    <ul class="space-y-2 text-blue-100">
                        <li class="flex items-center">
                            <i class="fas fa-check-circle mr-2 text-green-400"></i>
                            Professional delivery team
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle mr-2 text-green-400"></i>
                            Free installation and setup
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle mr-2 text-green-400"></i>
                            Product demonstration
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle mr-2 text-green-400"></i>
                            Warranty registration
                        </li>
                    </ul>
                </div>
                
                <div>
                    <h4 class="font-semibold mb-3">Support & Warranty</h4>
                    <ul class="space-y-2 text-blue-100">
                        <li class="flex items-center">
                            <i class="fas fa-shield-alt mr-2 text-green-400"></i>
                            2 Year comprehensive warranty
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-headset mr-2 text-green-400"></i>
                            24/7 technical support
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-tools mr-2 text-green-400"></i>
                            Free maintenance visits
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-graduation-cap mr-2 text-green-400"></i>
                            Training and certification
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
            <a href="/products" 
               class="w-full sm:w-auto bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl text-center">
                <i class="fas fa-shopping-cart mr-2"></i>Continue Shopping
            </a>
            
            <button onclick="downloadOrderDetails()" 
                    class="w-full sm:w-auto bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                <i class="fas fa-download mr-2"></i>Download Order Details
            </button>
            
            <a href="/contact" 
               class="w-full sm:w-auto bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl text-center">
                <i class="fas fa-phone mr-2"></i>Contact Support
            </a>
        </div>
    </div>
</section>

<script>
let orderConfirmation = {};

// Load order confirmation data on page load
document.addEventListener('DOMContentLoaded', function() {
    loadOrderConfirmation();
});

function loadOrderConfirmation() {
    orderConfirmation = JSON.parse(sessionStorage.getItem('orderConfirmation') || '{}');
    
    if (Object.keys(orderConfirmation).length === 0) {
        // Redirect to products if no order data
        window.location.href = '/products';
        return;
    }
    
    displayOrderDetails();
}

function displayOrderDetails() {
    // Display Order ID
    document.getElementById('orderIdDisplay').textContent = orderConfirmation.orderId || '#ORD-' + Date.now();
    
    // Display Order Summary
    displayOrderSummary();
    
    // Display Customer Details
    displayCustomerDetails();
    
    // Display Delivery Address
    displayDeliveryAddress();
    
    // Display Order Total
    displayOrderTotal();
}

function displayOrderSummary() {
    const display = document.getElementById('orderSummaryDisplay');
    const product = orderConfirmation.product;
    const quantity = orderConfirmation.quantity || 1;
    
    if (!product) return;
    
    display.innerHTML = `
        <div class="flex items-center space-x-6 p-6 bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl border border-green-200">
            <img src="${product.image || '/images/placeholder-medical.jpg'}" 
                 alt="${product.name}" 
                 class="w-24 h-24 object-cover rounded-xl">
            <div class="flex-1">
                <h4 class="text-xl font-bold text-gray-900 mb-2">${product.name}</h4>
                <p class="text-gray-600 mb-2">${product.category || 'Medical Equipment'}</p>
                <div class="flex items-center space-x-4">
                    <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                        <i class="fas fa-shield-alt mr-1"></i>ISO Certified
                    </span>
                    <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                        <i class="fas fa-award mr-1"></i>2 Year Warranty
                    </span>
                </div>
            </div>
            <div class="text-right">
                <div class="text-sm text-gray-600 mb-1">Quantity: ${quantity}</div>
                <div class="text-sm text-gray-600 mb-2">₹${product.price.toLocaleString()} each</div>
                <div class="text-2xl font-bold text-green-600">₹${(product.price * quantity).toLocaleString()}</div>
            </div>
        </div>
    `;
}

function displayCustomerDetails() {
    const display = document.getElementById('customerDetailsDisplay');
    const customer = orderConfirmation.customer;
    
    if (!customer) return;
    
    display.innerHTML = `
        <div><strong>Name:</strong> ${customer.firstName} ${customer.lastName}</div>
        <div><strong>Email:</strong> ${customer.email}</div>
        <div><strong>Mobile:</strong> +91 ${customer.mobile}</div>
    `;
}

function displayDeliveryAddress() {
    const display = document.getElementById('deliveryAddressDisplay');
    const customer = orderConfirmation.customer;
    
    if (!customer) return;
    
    display.innerHTML = `
        <div>${customer.address}</div>
        <div>${customer.city}, ${customer.state} ${customer.pincode}</div>
        <div>${customer.country}</div>
    `;
}

function displayOrderTotal() {
    const display = document.getElementById('orderTotalDisplay');
    const product = orderConfirmation.product;
    const quantity = orderConfirmation.quantity || 1;
    
    if (!product) return;
    
    const subtotal = product.price * quantity;
    const shipping = 0; // Free shipping
    const installation = 0; // Free installation
    const total = subtotal + shipping + installation;
    
    display.innerHTML = `
        <div class="flex items-center justify-between py-2">
            <span class="text-gray-600">Subtotal (${quantity} item${quantity > 1 ? 's' : ''})</span>
            <span class="font-semibold">₹${subtotal.toLocaleString()}</span>
        </div>
        <div class="flex items-center justify-between py-2">
            <span class="text-gray-600">Shipping & Handling</span>
            <span class="font-semibold text-green-600">FREE</span>
        </div>
        <div class="flex items-center justify-between py-2">
            <span class="text-gray-600">Installation</span>
            <span class="font-semibold text-green-600">FREE</span>
        </div>
        <div class="border-t border-gray-300 pt-3 mt-3">
            <div class="flex items-center justify-between">
                <span class="text-xl font-bold text-gray-900">Total Amount</span>
                <span class="text-2xl font-bold text-green-600">₹${total.toLocaleString()}</span>
            </div>
        </div>
    `;
}

function downloadOrderDetails() {
    const orderDetails = `
ORDER CONFIRMATION
==================

Order ID: ${orderConfirmation.orderId || '#ORD-' + Date.now()}
Order Date: ${new Date().toLocaleDateString()}

CUSTOMER DETAILS
================
Name: ${orderConfirmation.customer?.firstName} ${orderConfirmation.customer?.lastName}
Email: ${orderConfirmation.customer?.email}
Mobile: +91 ${orderConfirmation.customer?.mobile}

DELIVERY ADDRESS
================
${orderConfirmation.customer?.address}
${orderConfirmation.customer?.city}, ${orderConfirmation.customer?.state} ${orderConfirmation.customer?.pincode}
${orderConfirmation.customer?.country}

ORDER DETAILS
=============
Product: ${orderConfirmation.product?.name}
Category: ${orderConfirmation.product?.category || 'Medical Equipment'}
Quantity: ${orderConfirmation.quantity || 1}
Unit Price: ₹${orderConfirmation.product?.price.toLocaleString()}
Total Amount: ₹${((orderConfirmation.product?.price || 0) * (orderConfirmation.quantity || 1)).toLocaleString()}

PAYMENT METHOD
==============
Cash on Delivery (COD)

DELIVERY INFORMATION
====================
Estimated Delivery: 3-5 Business Days
Shipping: FREE
Installation: FREE (Included)
Warranty: 2 Years

Thank you for choosing Sanjana Enterprises!
For support, contact us at support@sanjanaenterprises.com
    `;
    
    const blob = new Blob([orderDetails], { type: 'text/plain' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `Order_${orderConfirmation.orderId || Date.now()}.txt`;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    window.URL.revokeObjectURL(url);
}
</script>

