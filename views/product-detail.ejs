<%- include('partials/header') %>

<!-- Modern Medical Product Detail Page -->
<section class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-2 text-sm text-gray-600 mb-8">
            <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <a href="/products" class="hover:text-blue-600 transition-colors">Medical Equipment</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <span class="text-blue-600 font-semibold"><%= product.name %></span>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
            
            <!-- Product Images -->
            <div class="space-y-4">
                <!-- Main Image -->
                <div class="relative bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-200">
                    <div class="aspect-square bg-gradient-to-br from-blue-50 to-cyan-50 flex items-center justify-center">
                        <img id="main-image" 
                             src="<%= product.images && product.images[0] ? product.images[0].src : '/images/placeholder-medical.jpg' %>" 
                             alt="<%= product.name %>" 
                             class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                             onerror="this.src='/images/placeholder-medical.jpg'">
                    </div>
                    
                    <!-- Medical Certification Badge -->
                    <div class="absolute top-6 left-6">
                        <div class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                            <i class="fas fa-shield-alt mr-2"></i>ISO Certified
                        </div>
                    </div>
                    
                    <!-- Discount Badge -->
                    <% if (product.on_sale && product.regular_price > product.price) { %>
                        <div class="absolute top-6 right-6">
                            <div class="bg-gradient-to-r from-red-500 to-pink-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg animate-pulse">
                                <%= Math.round((1 - product.price / product.regular_price) * 100) %>% OFF
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <!-- Thumbnail Images -->
                <% if (product.images && product.images.length > 1) { %>
                    <div class="grid grid-cols-4 gap-4">
                        <% product.images.slice(0, 4).forEach((image, index) => { %>
                            <div class="aspect-square bg-white rounded-2xl shadow-lg overflow-hidden border-2 border-transparent hover:border-blue-500 transition-all duration-300 cursor-pointer"
                                 onclick="changeMainImage('<%= image.src %>')">
                                <img src="<%= image.src %>" 
                                     alt="<%= product.name %> - View <%= index + 1 %>" 
                                     class="w-full h-full object-cover"
                                     onerror="this.src='/images/placeholder-medical.jpg'">
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>

            <!-- Product Information -->
            <div class="space-y-8">
                
                <!-- Product Title & Rating -->
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-50 to-cyan-50 text-blue-700 text-sm font-semibold rounded-full border border-blue-200">
                            <i class="fas fa-tag mr-2"></i>
                            <%= product.categories && product.categories[0] ? product.categories[0].name : 'Medical Equipment' %>
                        </span>
                        
                        <!-- Stock Status -->
                        <% if (product.stock_status === 'instock') { %>
                            <div class="flex items-center text-green-600 bg-green-50 px-3 py-1 rounded-full text-sm font-semibold">
                                <i class="fas fa-check-circle mr-2"></i>In Stock
                            </div>
                        <% } else { %>
                            <div class="flex items-center text-red-600 bg-red-50 px-3 py-1 rounded-full text-sm font-semibold">
                                <i class="fas fa-times-circle mr-2"></i>Out of Stock
                            </div>
                        <% } %>
                    </div>
                    
                    <h1 class="text-4xl md:text-5xl font-black text-gray-900 leading-tight mb-4">
                        <%= product.name %>
                    </h1>
                    
                    <!-- Rating -->
                    <div class="flex items-center space-x-4 mb-6">
                        <div class="flex items-center space-x-1">
                            <% for(let i = 0; i < 5; i++) { %>
                                <i class="fas fa-star <%= i < 4 ? 'text-yellow-400' : 'text-gray-300' %> text-lg"></i>
                            <% } %>
                        </div>
                        <span class="text-gray-600 font-medium">4.8 (127 reviews)</span>
                        <a href="#reviews" class="text-blue-600 hover:text-blue-700 font-semibold text-sm">Read Reviews</a>
                    </div>
                </div>

                <!-- Price -->
                <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-3xl p-8 border border-blue-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <div class="flex items-center space-x-4 mb-2">
                                <span class="text-4xl font-black text-blue-600">₹<%= parseFloat(product.price || 0).toLocaleString() %></span>
                                <% if (product.regular_price && parseFloat(product.regular_price) > parseFloat(product.price)) { %>
                                    <span class="text-xl text-gray-500 line-through">₹<%= parseFloat(product.regular_price).toLocaleString() %></span>
                                <% } %>
                            </div>
                            <% if (product.regular_price && parseFloat(product.regular_price) > parseFloat(product.price)) { %>
                                <div class="text-green-600 font-semibold">
                                    You save ₹<%= (parseFloat(product.regular_price) - parseFloat(product.price)).toLocaleString() %>
                                </div>
                            <% } %>
                        </div>
                        
                        <!-- Medical Certifications -->
                        <div class="text-right">
                            <div class="flex flex-col space-y-2">
                                <div class="flex items-center text-sm text-green-600">
                                    <i class="fas fa-certificate mr-2"></i>FDA Approved
                                </div>
                                <div class="flex items-center text-sm text-blue-600">
                                    <i class="fas fa-award mr-2"></i>CE Marked
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Description -->
                <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-100">
                    <h3 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-info-circle text-blue-600 mr-3"></i>
                        Product Description
                    </h3>
                    <div class="prose prose-lg text-gray-700 leading-relaxed">
                        <%- product.description || product.short_description || 'Premium medical equipment designed for healthcare excellence and patient care.' %>
                    </div>
                </div>

                <!-- Key Features -->
                <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-100">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-star text-blue-600 mr-3"></i>
                        Key Features
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex items-center p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl border border-green-200">
                            <i class="fas fa-check-circle text-green-600 text-xl mr-3"></i>
                            <span class="font-semibold text-gray-800">High Quality Materials</span>
                        </div>
                        <div class="flex items-center p-4 bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl border border-blue-200">
                            <i class="fas fa-shield-alt text-blue-600 text-xl mr-3"></i>
                            <span class="font-semibold text-gray-800">ISO 13485 Certified</span>
                        </div>
                        <div class="flex items-center p-4 bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl border border-purple-200">
                            <i class="fas fa-tools text-purple-600 text-xl mr-3"></i>
                            <span class="font-semibold text-gray-800">Easy Maintenance</span>
                        </div>
                        <div class="flex items-center p-4 bg-gradient-to-r from-yellow-50 to-orange-50 rounded-2xl border border-yellow-200">
                            <i class="fas fa-clock text-yellow-600 text-xl mr-3"></i>
                            <span class="font-semibold text-gray-800">2 Year Warranty</span>
                        </div>
                    </div>
                </div>

                <!-- Quantity & Add to Cart -->
                <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-100">
                    <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-6">
                        
                        <!-- Quantity Selector -->
                        <div class="flex items-center space-x-4">
                            <label class="text-lg font-semibold text-gray-800">Quantity:</label>
                            <div class="flex items-center border-2 border-gray-200 rounded-2xl overflow-hidden">
                                <button onclick="decreaseQuantity()" class="px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold transition-colors">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="number" id="quantity" value="1" min="1" max="10" 
                                       class="w-16 py-3 text-center border-0 focus:ring-0 font-semibold text-lg">
                                <button onclick="increaseQuantity()" class="px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold transition-colors">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex-1 flex space-x-4 w-full">
                            <% if (product.stock_status === 'instock') { %>
                                <button onclick="addToCart('<%= product.id %>')" 
                                        class="flex-1 bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                    <i class="fas fa-cart-plus mr-3"></i>Add to Cart
                                </button>
                                <button onclick="buyNow('<%= product.id %>')" 
                                        class="flex-1 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                    <i class="fas fa-bolt mr-3"></i>Buy Now
                                </button>
                            <% } else { %>
                                <button disabled 
                                        class="flex-1 bg-gray-400 text-white font-bold py-4 px-8 rounded-2xl cursor-not-allowed">
                                    <i class="fas fa-times mr-3"></i>Out of Stock
                                </button>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Additional Actions -->
                    <div class="flex items-center justify-center space-x-8 mt-6 pt-6 border-t border-gray-200">
                        <button onclick="addToWishlist('<%= product.id %>')" 
                                class="flex items-center text-gray-600 hover:text-red-500 transition-colors font-semibold">
                            <i class="fas fa-heart mr-2"></i>Add to Wishlist
                        </button>
                        <button onclick="shareProduct()" 
                                class="flex items-center text-gray-600 hover:text-blue-500 transition-colors font-semibold">
                            <i class="fas fa-share-alt mr-2"></i>Share Product
                        </button>
                        <button onclick="compareProduct('<%= product.id %>')" 
                                class="flex items-center text-gray-600 hover:text-green-500 transition-colors font-semibold">
                            <i class="fas fa-balance-scale mr-2"></i>Compare
                        </button>
                    </div>
                </div>

                <!-- Medical Information -->
                <div class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white rounded-3xl p-8 shadow-lg">
                    <h3 class="text-2xl font-bold mb-6 flex items-center">
                        <i class="fas fa-medical-kit mr-3"></i>
                        Medical Information
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h4 class="font-semibold mb-2">Compliance</h4>
                            <ul class="space-y-1 text-blue-100">
                                <li>• FDA 510(k) Cleared</li>
                                <li>• ISO 13485 Certified</li>
                                <li>• CE Marking Compliant</li>
                            </ul>
                        </div>
                        <div>
                            <h4 class="font-semibold mb-2">Support</h4>
                            <ul class="space-y-1 text-blue-100">
                                <li>• 24/7 Technical Support</li>
                                <li>• Installation Assistance</li>
                                <li>• Training Programs</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Shipping & Returns -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 text-center">
                        <div class="bg-gradient-to-br from-green-100 to-emerald-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-shipping-fast text-2xl text-green-600"></i>
                        </div>
                        <h4 class="font-bold text-gray-900 mb-2">Free Shipping</h4>
                        <p class="text-sm text-gray-600">On orders over ₹50,000</p>
                    </div>
                    
                    <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 text-center">
                        <div class="bg-gradient-to-br from-blue-100 to-cyan-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-undo text-2xl text-blue-600"></i>
                        </div>
                        <h4 class="font-bold text-gray-900 mb-2">Easy Returns</h4>
                        <p class="text-sm text-gray-600">30-day return policy</p>
                    </div>
                    
                    <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 text-center">
                        <div class="bg-gradient-to-br from-purple-100 to-pink-100 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-headset text-2xl text-purple-600"></i>
                        </div>
                        <h4 class="font-bold text-gray-900 mb-2">Expert Support</h4>
                        <p class="text-sm text-gray-600">Medical equipment specialists</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products -->
        <% if (relatedProducts && relatedProducts.length > 0) { %>
            <section class="mb-16">
                <div class="text-center mb-12">
                    <h2 class="text-4xl font-bold text-gray-900 mb-4">Related Medical Equipment</h2>
                    <p class="text-xl text-gray-600">Discover more premium healthcare solutions</p>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    <% relatedProducts.forEach(relatedProduct => { %>
                        <div class="bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden">
                            <div class="relative">
                                <img src="<%= relatedProduct.images && relatedProduct.images[0] ? relatedProduct.images[0].src : '/images/placeholder-medical.jpg' %>" 
                                     alt="<%= relatedProduct.name %>" 
                                     class="w-full h-48 object-cover"
                                     onerror="this.src='/images/placeholder-medical.jpg'">
                                <div class="absolute top-4 left-4">
                                    <div class="bg-green-500 text-white px-3 py-1 rounded-full text-xs font-bold">
                                        ISO Certified
                                    </div>
                                </div>
                            </div>
                            
                            <div class="p-6">
                                <h3 class="text-lg font-bold mb-2 text-gray-900">
                                    <a href="/product/<%= relatedProduct.id %>" class="hover:text-blue-600 transition-colors">
                                        <%= relatedProduct.name %>
                                    </a>
                                </h3>
                                <div class="flex items-center justify-between">
                                    <span class="text-2xl font-black text-blue-600">₹<%= parseFloat(relatedProduct.price || 0).toLocaleString() %></span>
                                    <a href="/product/<%= relatedProduct.id %>" 
                                       class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-semibold py-2 px-4 rounded-xl transition-all duration-300 transform hover:scale-105">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </section>
        <% } %>
    </div>
</section>

<script>
// Image Gallery Functions
function changeMainImage(src) {
    document.getElementById('main-image').src = src;
}

// Quantity Functions
function increaseQuantity() {
    const quantityInput = document.getElementById('quantity');
    const currentValue = parseInt(quantityInput.value);
    if (currentValue < 10) {
        quantityInput.value = currentValue + 1;
    }
}

function decreaseQuantity() {
    const quantityInput = document.getElementById('quantity');
    const currentValue = parseInt(quantityInput.value);
    if (currentValue > 1) {
        quantityInput.value = currentValue - 1;
    }
}

// Cart Functions
function addToCart(productId) {
    const quantity = document.getElementById('quantity').value;
    
    fetch('/cart/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            productId: productId,
            quantity: parseInt(quantity)
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showNotification('Product added to cart!', 'success');
        } else {
            showNotification('Failed to add product to cart', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showNotification('Failed to add product to cart', 'error');
    });
}

function buyNow(productId) {
    const quantity = document.getElementById('quantity').value;
    
    // Store order data in session storage
    const orderData = {
        product: {
            id: '<%= product.id %>',
            name: '<%= product.name %>',
            price: <%= product.price %>,
            image: '<%= product.images && product.images[0] ? product.images[0].src : "/images/placeholder-medical.jpg" %>',
            category: '<%= product.categories && product.categories[0] ? product.categories[0].name : "Medical Equipment" %>'
        },
        quantity: parseInt(quantity)
    };
    
    sessionStorage.setItem('orderData', JSON.stringify(orderData));
    
    // Redirect to customer information page
    window.location.href = '/customer-info';
}

// Wishlist Function
function addToWishlist(productId) {
    showNotification('Added to wishlist!', 'success');
}

// Share Function
function shareProduct() {
    if (navigator.share) {
        navigator.share({
            title: '<%= product.name %>',
            text: 'Check out this medical equipment from Sanjana Enterprises',
            url: window.location.href
        });
    } else {
        // Fallback - copy to clipboard
        navigator.clipboard.writeText(window.location.href);
        showNotification('Product link copied to clipboard!', 'success');
    }
}

// Compare Function
function compareProduct(productId) {
    showNotification('Added to comparison list!', 'success');
}

// Notification Function
function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 z-50 px-6 py-4 rounded-xl shadow-lg transition-all duration-300 ${
        type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
        <div class="flex items-center">
            <i class="fas fa-${type === 'success' ? 'check' : 'times'} mr-2"></i>
            ${message}
        </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.transform = 'translateX(100%)';
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 3000);
}
</script>

<%- include('partials/footer') %>
