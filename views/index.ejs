        <% if (products.length > 0) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 lg:gap-8">
                <% products.forEach(product => { %>
                    <div class="card overflow-hidden group" data-product-id="<%= product.id %>">
                        <div class="relative overflow-hidden">
                            <img src="<%= product.images && product.images[0] ? product.images[0].src : '/images/placeholder-medical.jpg' %>" alt="<%= product.name %>" 
                                 class="product-image w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
                                 onerror="this.src='/images/placeholder-medical.jpg'">
                            <% if (product.originalPrice > product.price) { %>
                                <div class="discount-badge absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded text-sm font-semibold">
                                    <%= Math.round((1 - product.price / product.originalPrice) * 100) %>% OFF
                                </div>
                            <% } %>
                            <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <button onclick="addToWishlist('<%= product.id %>')" 
                                        class="bg-white text-gray-600 hover:text-red-500 p-2 rounded-full shadow-lg">
                                    <i class="fas fa-heart"></i>
                                </button>
                            </div>
                        </div>
                        <div class="p-6">
                            <div class="flex items-center mb-2">
                                <div class="flex text-yellow-400">
                                    <% for(let i = 0; i < 5; i++) { %>
                                        <i class="fas fa-star <%= i < Math.floor(product.rating) ? '' : 'text-gray-300' %>"></i>
                                    <% } %>
                                </div>
                                <span class="text-sm text-gray-500 ml-2">(<%= product.reviews %>)</span>
                            </div>
                            <h3 class="product-name text-lg font-semibold mb-2 group-hover:text-primary-600 transition-colors">
                                <a href="/product/<%= product.id %>"><%= product.name %></a>
                            </h3>
                            <p class="text-gray-600 text-sm mb-3"><%= product.category %></p>
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center space-x-2">
                                    <span class="product-price text-2xl font-bold text-primary-600">â‚¹<%= product.price.toLocaleString() %></span>
                                    <% if (product.originalPrice > product.price) { %>
                                        <span class="product-original-price text-sm text-gray-500 line-through">â‚¹<%= product.originalPrice.toLocaleString() %></span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <button onclick="addToCart('<%= product.id %>')" 
                                        class="add-to-cart-btn flex-1 bg-primary-600 hover:bg-primary-700 text-white py-2 px-4 rounded-lg transition-colors duration-300">
                                    <i class="fas fa-cart-plus mr-2"></i>Add to Cart
                                </button>
                                <a href="/product/<%= product.id %>" 
                                   class="bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded-lg transition-colors duration-300">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
