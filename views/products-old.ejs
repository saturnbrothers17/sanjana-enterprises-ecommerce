<%- include('partials/header') %>

<!-- Hero Banner -->
<section class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-600 text-white py-20 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-900/20 to-purple-900/20"></div>
        <div class="absolute top-0 left-0 w-full h-full">
            <div class="absolute top-10 left-10 w-64 h-64 bg-blue-400/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-10 right-10 w-80 h-80 bg-purple-400/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
        </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <div class="flex items-center space-x-2 text-sm mb-8 text-blue-200">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <span class="text-white font-medium">Products</span>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
                <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">
                    <i class="fas fa-boxes mr-2"></i>
                    <span class="text-sm font-medium">500+ Premium Products</span>
                </div>
                
                <h1 class="text-5xl md:text-6xl font-black leading-tight">
                    Discover Our
                    <span class="block bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">
                        Medical Equipment
                    </span>
                </h1>
                
                <p class="text-xl text-blue-100 leading-relaxed">
                    Browse through our extensive collection of certified medical equipment. 
                    Find the perfect solution for your healthcare needs.
                </p>
                
                <!-- Quick Stats -->
                <div class="flex flex-wrap gap-6 pt-4">
                    <div class="flex items-center space-x-2">
                        <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-check text-green-400"></i>
                        </div>
                        <div>
                            <div class="font-bold">ISO Certified</div>
                            <div class="text-sm text-blue-200">Quality Assured</div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-shipping-fast text-blue-400"></i>
                        </div>
                        <div>
                            <div class="font-bold">Fast Delivery</div>
                            <div class="text-sm text-blue-200">Nationwide</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Floating Product Cards -->
            <div class="relative hidden lg:block">
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-4 animate-float">
                        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 border border-white/20">
                            <div class="w-12 h-12 bg-gradient-to-br from-cyan-400 to-blue-500 rounded-xl flex items-center justify-center mb-3">
                                <i class="fas fa-heartbeat text-xl text-white"></i>
                            </div>
                            <div class="text-sm font-semibold">Diagnostic</div>
                            <div class="text-xs text-blue-200">150+ Products</div>
                        </div>
                    </div>
                    <div class="space-y-4 mt-8 animate-float-delayed">
                        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 border border-white/20">
                            <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-500 rounded-xl flex items-center justify-center mb-3">
                                <i class="fas fa-lungs text-xl text-white"></i>
                            </div>
                            <div class="text-sm font-semibold">Respiratory</div>
                            <div class="text-xs text-blue-200">80+ Products</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="py-12 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar Filters -->
            <div class="lg:w-1/4">
                <div class="bg-white rounded-2xl shadow-xl p-6 sticky top-20 border border-gray-100">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-gray-900">Filters</h3>
                        <button class="text-sm text-primary-600 hover:text-primary-700 font-medium">
                            Clear All
                        </button>
                    </div>
                    
                    <!-- Category Filter -->
                    <div class="mb-8">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-layer-group text-white text-sm"></i>
                            </div>
                            <label class="text-lg font-bold text-gray-900">Category</label>
                        </div>
                        <select id="category-filter" onchange="filterProducts()" 
                                class="w-full border-2 border-gray-200 rounded-xl px-4 py-3 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-gradient-to-r from-gray-50 to-white">
                            <% categories.forEach(category => { %>
                                <option value="<%= category %>" <%= currentCategory === category ? 'selected' : '' %>>
                                    <%= category %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <!-- Price Range -->
                    <div class="mb-8">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-rupee-sign text-white text-sm"></i>
                            </div>
                            <label class="text-lg font-bold text-gray-900">Price Range</label>
                        </div>
                        <div class="space-y-3">
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-green-50 hover:to-emerald-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-green-600 focus:ring-green-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-green-700">Under ₹1,000</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">45</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-green-50 hover:to-emerald-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-green-600 focus:ring-green-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-green-700">₹1,000 - ₹5,000</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">120</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-green-50 hover:to-emerald-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-green-600 focus:ring-green-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-green-700">₹5,000 - ₹10,000</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">85</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-green-50 hover:to-emerald-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-green-600 focus:ring-green-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-green-700">Above ₹10,000</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">250</span>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Brand Filter -->
                    <div class="mb-8">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-award text-white text-sm"></i>
                            </div>
                            <label class="text-lg font-bold text-gray-900">Brand</label>
                        </div>
                        <div class="space-y-3">
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-purple-50 hover:to-pink-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-purple-600 focus:ring-purple-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-purple-700">Omron</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">95</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-purple-50 hover:to-pink-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-purple-600 focus:ring-purple-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-purple-700">Philips</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">78</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-purple-50 hover:to-pink-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-purple-600 focus:ring-purple-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-purple-700">Dr. Morepen</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">62</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-purple-50 hover:to-pink-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-purple-600 focus:ring-purple-500 w-5 h-5">
                                <span class="ml-3 text-sm font-medium group-hover:text-purple-700">Beurer</span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">45</span>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Rating Filter -->
                    <div class="mb-8">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-orange-600 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-star text-white text-sm"></i>
                            </div>
                            <label class="text-lg font-bold text-gray-900">Customer Rating</label>
                        </div>
                        <div class="space-y-3">
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-yellow-50 hover:to-orange-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-yellow-600 focus:ring-yellow-500 w-5 h-5">
                                <span class="ml-3 flex items-center">
                                    <div class="flex text-yellow-400 mr-2">
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                    </div>
                                    <span class="text-sm font-medium group-hover:text-yellow-700">5 Stars & Up</span>
                                </span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">180</span>
                            </label>
                            <label class="group flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-yellow-50 hover:to-orange-50 transition-all duration-300 cursor-pointer">
                                <input type="checkbox" class="rounded-lg border-2 border-gray-300 text-yellow-600 focus:ring-yellow-500 w-5 h-5">
                                <span class="ml-3 flex items-center">
                                    <div class="flex text-yellow-400 mr-2">
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="fas fa-star text-sm"></i>
                                        <i class="far fa-star text-sm text-gray-300"></i>
                                    </div>
                                    <span class="text-sm font-medium group-hover:text-yellow-700">4 Stars & Up</span>
                                </span>
                                <span class="ml-auto text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">320</span>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Clear Filters -->
                    <button class="w-full bg-gradient-to-r from-gray-200 to-gray-300 hover:from-gray-300 hover:to-gray-400 text-gray-700 font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                        <i class="fas fa-times mr-2"></i>Clear All Filters
                    </button>
                </div>
            </div>
            
            <!-- Products Grid -->
            <div class="lg:w-3/4">
                <!-- Search and Sort Bar -->
                <div class="bg-white rounded-2xl shadow-xl p-6 mb-8 border border-gray-100">
                    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center space-y-6 lg:space-y-0">
                        <div class="flex flex-col space-y-2">
                            <div class="flex items-center space-x-2">
                                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-boxes text-white text-sm"></i>
                                </div>
                                <span class="text-xl font-bold text-gray-900">
                                    <%= products.length %> Products Found
                                </span>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <% if (currentCategory !== 'All Categories') { %>
                                    <span class="inline-flex items-center px-3 py-1 bg-primary-100 text-primary-800 text-sm font-medium rounded-full">
                                        <i class="fas fa-tag mr-1 text-xs"></i>
                                        <%= currentCategory %>
                                    </span>
                                <% } %>
                                <% if (currentSearch) { %>
                                    <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                                        <i class="fas fa-search mr-1 text-xs"></i>
                                        "<%= currentSearch %>"
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 w-full lg:w-auto">
                            <!-- Search -->
                            <div class="relative w-full sm:w-auto">
                                <input type="text" id="search-input" placeholder="Search products..." 
                                       value="<%= currentSearch %>"
                                       class="w-full sm:w-72 pl-12 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-gradient-to-r from-gray-50 to-white">
                                <i class="fas fa-search absolute left-4 top-4 text-gray-400"></i>
                                <button class="absolute right-2 top-2 bg-primary-600 hover:bg-primary-700 text-white p-2 rounded-lg transition-colors">
                                    <i class="fas fa-search text-sm"></i>
                                </button>
                            </div>
                            
                            <div class="flex items-center space-x-3 w-full sm:w-auto">
                                <!-- Sort -->
                                <select id="sort-filter" onchange="filterProducts()" 
                                        class="flex-1 sm:flex-none border-2 border-gray-200 rounded-xl px-4 py-3 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-gradient-to-r from-gray-50 to-white">
                                    <option value="">Sort by</option>
                                    <option value="name" <%= currentSort === 'name' ? 'selected' : '' %>>Name A-Z</option>
                                    <option value="price-low" <%= currentSort === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
                                    <option value="price-high" <%= currentSort === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
                                    <option value="rating" <%= currentSort === 'rating' ? 'selected' : '' %>>Highest Rated</option>
                                </select>
                                
                                <!-- View Toggle -->
                                <div class="flex border-2 border-gray-200 rounded-xl overflow-hidden">
                                    <button class="p-3 bg-primary-600 text-white hover:bg-primary-700 transition-colors">
                                        <i class="fas fa-th"></i>
                                    </button>
                                    <button class="p-3 text-gray-600 hover:bg-gray-100 bg-white transition-colors">
                                        <i class="fas fa-list"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Products Grid -->
                <% if (products.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-fade-in-up">
                        <% products.forEach((product, index) => { %>
                            <div class="products-grid group relative bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden" data-product-id="<%= product.id %>" style="animation-delay: <%= index * 100 %>ms;">
                                <!-- Gradient Background -->
                                <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-white to-purple-50/50 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                
                                <div class="relative overflow-hidden rounded-t-3xl">
                                    <img src="<%= product.image %>" alt="<%= product.name %>" 
                                         class="product-image w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700">
                                    
                                    <!-- Badges -->
                                    <div class="absolute top-4 left-4 flex flex-col space-y-2">
                                        <% if (product.originalPrice > product.price) { %>
                                            <div class="discount-badge bg-gradient-to-r from-red-500 to-pink-600 text-white px-3 py-1 rounded-full text-sm font-bold shadow-lg animate-pulse">
                                                <%= Math.round((1 - product.price / product.originalPrice) * 100) %>% OFF
                                            </div>
                                        <% } %>
                                        <% if (product.inStock) { %>
                                            <div class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-3 py-1 rounded-full text-xs font-semibold shadow-lg">
                                                ✓ In Stock
                                            </div>
                                        <% } else { %>
                                            <div class="bg-gradient-to-r from-red-500 to-pink-600 text-white px-3 py-1 rounded-full text-xs font-semibold shadow-lg">
                                                ✗ Out of Stock
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Quick Actions -->
                                    <div class="absolute top-4 right-4 flex flex-col space-y-2 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-4 group-hover:translate-x-0">
                                        <button onclick="addToWishlist(<%= product.id %>)" 
                                                class="bg-white/90 backdrop-blur-sm text-gray-600 hover:text-red-500 hover:bg-red-50 p-3 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                        <a href="/product/<%= product.id %>" 
                                           class="bg-white/90 backdrop-blur-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50 p-3 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110 inline-block">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button onclick="addToCompare(<%= product.id %>)" 
                                                class="bg-white/90 backdrop-blur-sm text-gray-600 hover:text-blue-600 hover:bg-blue-50 p-3 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110">
                                            <i class="fas fa-balance-scale"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Overlay Gradient -->
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                </div>
                                <div class="relative p-8">
                                    <!-- Rating and Reviews -->
                                    <div class="flex items-center justify-between mb-4">
                                        <div class="flex items-center space-x-2">
                                            <div class="flex text-yellow-400">
                                                <% for(let i = 0; i < 5; i++) { %>
                                                    <i class="fas fa-star <%= i < Math.floor(product.rating) ? '' : 'text-gray-300' %> text-sm"></i>
                                                <% } %>
                                            </div>
                                            <span class="text-sm font-medium text-gray-600">(<%= product.reviews %>)</span>
                                        </div>
                                        <div class="text-xs font-semibold text-primary-600 bg-primary-50 px-2 py-1 rounded-full">
                                            <%= product.rating %> ★
                                        </div>
                                    </div>
                                    
                                    <!-- Product Name -->
                                    <h3 class="product-name text-xl font-bold mb-3 text-gray-900 group-hover:text-primary-600 transition-colors duration-300 leading-tight">
                                        <a href="/product/<%= product.id %>"><%= product.name %></a>
                                    </h3>
                                    
                                    <!-- Category -->
                                    <div class="flex items-center mb-4">
                                        <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 text-sm font-medium rounded-full">
                                            <i class="fas fa-tag mr-1 text-xs"></i>
                                            <%= product.category %>
                                        </span>
                                    </div>
                                    
                                    <!-- Price -->
                                    <div class="flex items-center justify-between mb-6">
                                        <div class="flex items-center space-x-3">
                                            <span class="product-price text-3xl font-black text-primary-600">₹<%= product.price.toLocaleString() %></span>
                                            <% if (product.originalPrice > product.price) { %>
                                                <div class="flex flex-col">
                                                    <span class="product-original-price text-sm text-gray-500 line-through">₹<%= product.originalPrice.toLocaleString() %></span>
                                                    <span class="text-xs text-green-600 font-semibold">Save ₹<%= (product.originalPrice - product.price).toLocaleString() %></span>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <!-- Action Buttons -->
                                    <div class="flex space-x-3">
                                        <% if (product.inStock) { %>
                                            <button onclick="addToCart(<%= product.id %>)" 
                                                    class="add-to-cart-btn flex-1 bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                                <i class="fas fa-cart-plus mr-2"></i>Add to Cart
                                            </button>
                                        <% } else { %>
                                            <button disabled 
                                                    class="flex-1 bg-gray-400 text-white font-semibold py-3 px-4 rounded-xl cursor-not-allowed">
                                                <i class="fas fa-times mr-2"></i>Out of Stock
                                            </button>
                                        <% } %>
                                        <a href="/product/<%= product.id %>" 
                                           class="bg-gradient-to-r from-gray-100 to-gray-200 hover:from-gray-200 hover:to-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                    
                                    <!-- Quick Info -->
                                    <div class="mt-4 pt-4 border-t border-gray-100">
                                        <div class="flex items-center justify-between text-xs text-gray-500">
                                            <div class="flex items-center">
                                                <i class="fas fa-shipping-fast mr-1"></i>
                                                <span>Free Shipping</span>
                                            </div>
                                            <div class="flex items-center">
                                                <i class="fas fa-shield-alt mr-1"></i>
                                                <span>2 Year Warranty</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
