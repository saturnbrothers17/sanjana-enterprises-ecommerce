# Turso Database Configuration
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Session Secret
SESSION_SECRET=your-super-secret-key

# App Configuration
PORT=3000
NODE_ENV=development

# Dashboard Integration
DASHBOARD_URL=http://localhost:3001
API_SECRET_KEY=your-shared-api-secret-key

# WordPress Database Configuration (Alternative to Turso)
WP_DB_HOST=localhost
WP_DB_USER=wordpress_user
WP_DB_PASSWORD=your-wordpress-db-password
WP_DB_NAME=wordpress
WP_DB_PORT=3306

# For Vercel deployment, set these in Vercel dashboard:
# DASHBOARD_URL=https://your-dashboard.vercel.app
# API_SECRET_KEY=your-production-secret-key
